datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x", "linux-musl-arm64-openssl-1.1.x"]
}

enum UserRole {
  X
  USER
  ADMIN
}

enum PaymentType {
  GOTOVINA
  KARTICA
  TRANSAKCIJSKI
}

enum ReceiptStatus {
  RACUN
  RACUN_STORNIRAN
  STORNO
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  googleId      String   @unique
  role          UserRole @default(USER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  receipts      Receipt[]
  transactions  Transaction[]
}

model Article {
  id              String   @id @default(cuid())
  name            String   @unique
  productCode     String   @unique
  kpdCode         String
  price           Float    // Bruto iznos in €
  taxRate         Float    // PDV percentage
  description     String?
  unit            String?
  active          Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  category        Category? @relation(fields: [categoryId], references: [id])
  categoryId      String?
  receiptItems    ReceiptItem[]
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  active    Boolean   @default(true)
  articles  Article[] // Relation to Articles
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Receipt {
  id                    String        @id @default(cuid())
  invoiceNumber         String?       @unique
  jir                   String?
  zki                   String?
  webshopOrderId        String?       // External webshop order ID
  webshopType           String?       @default("CUSTOM") // WOO_COMMERCE, SHOPIFY, CUSTOM
  webshopEvent          String?
  webshopOrderNumber    String?
  invoiceType           String        @default("RAČUN") // PONUDA, RAČUN, FISKALNI_RAČUN
  paymentType           PaymentType   @default(GOTOVINA)
  paymentGatewayCode    String?
  paymentGatewayName    String?
  userId                String
  user                  User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  brutto                Float
  netto                 Float
  taxValue              Float
  currency              String        @default("EUR")
  taxesIncluded         Boolean       @default(false)
  dueDate               DateTime?
  validTo               DateTime?
  billingAddress        BillingAddress? @relation(fields: [billingAddressId], references: [id])
  billingAddressId      String?
  shippingAddress       ShippingAddress? @relation(fields: [shippingAddressId], references: [id])
  shippingAddressId     String?
  customerLocale        String?       @default("HR")
  termsHR               String?
  termsEN               String?
  termsDE               String?
  internalNote          String?
  discountValue         Float         @default(0)
  shippingCost          Float         @default(0)
  status                ReceiptStatus @default(RACUN)
  items                 ReceiptItem[]
  transaction           Transaction?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
}

model BillingAddress {
  id          String   @id @default(cuid())
  name        String
  address1    String
  address2    String?
  city        String
  country     String
  phone       String?
  zipCode     String
  email       String?
  vatNumber   String?
  oib         String?
  company     String?
  receipts    Receipt[]
}

model ShippingAddress {
  id          String   @id @default(cuid())
  name        String
  address1    String
  address2    String?
  city        String
  country     String
  phone       String?
  zipCode     String
  email       String?
  company     String?
  receipts    Receipt[]
}

model ReceiptItem {
  id              String   @id @default(cuid())
  receiptId       String
  receipt         Receipt  @relation(fields: [receiptId], references: [id], onDelete: Cascade)
  articleId       String
  article         Article  @relation(fields: [articleId], references: [id])
  name            String?
  description     String?
  lineItemId      String?
  quantity        Float
  price           Float
  taxRate         Float
  unit            String?
  createdAt       DateTime @default(now())

  @@index([receiptId])
  @@index([articleId])
}

model Transaction {
  id        String   @id @default(cuid())
  receiptId String   @unique
  receipt   Receipt  @relation(fields: [receiptId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount    Float
  createdAt DateTime @default(now())

  @@index([receiptId])
  @@index([userId])
}

model SalesReport {
  id                  String   @id @default(cuid())
  date                DateTime @default(now())
  totalSalesAmount    Float
  invoiceCount        Int
  description         String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
